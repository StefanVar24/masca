{
  "name": "@blockchain-lab-um/ssi-snap",
  "version": "1.0.8",
  "description": "Snap for managing VCs and VPs in MetaMask",
  "main": "index.js",
  "homepage": "https://github.com/blockchain-lab-um/SSISnap",
  "keywords": [
    "MetaMask",
    "Snaps",
    "SSI",
    "VC",
    "Verifiable Credential",
    "VP",
    "Verifiable Presentation",
    "DID:ETHR",
    "Veramo"
  ],
  "files": [
    "dist/bundle.js",
    "snap.manifest.json",
    "package.json"
  ],
  "scripts": {
    "start": "mm-snap --version && yarn run build && yarn run serve",
    "build": "yarn run build:tsc && yarn run build:snap",
    "rebuild": "mm-snap manifest --fix && mm-snap eval && mm-snap serve",
    "build:snap": "yarn build:snap:bundle && yarn build:snap:postprocess && yarn build:snap:eval",
    "build:snap:bundle": "mm-snap build -s build/src/index.js --verboseErrors  --stripComments --eval false",
    "build:snap:postprocess": "node ./post-process.js && mm-snap manifest --fix",
    "build:snap:eval": "mm-snap eval -b dist/bundle.js",
    "build:tsc": "tsc --build --pretty",
    "serve": "mm-snap serve",
    "fix": "mm-snap manifest --fix",
    "postinstall": "patch-package"
  },
  "author": {
    "name": "Blockchain Lab:UM",
    "url": "https://blockchain-lab.um.si",
    "email": "blockchain-lab@um.si"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-lab-um/ssi-snap.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@metamask/snaps-cli": "^0.13.0",
    "@types/node": "^17.0.18",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "@blockchain-lab-um/veramo-vc-manager": "1.0.0",
    "@veramo/core": "^3.1.0",
    "@veramo/credential-w3c": "file:../../../veramo/packages/credential-w3c",
    "@veramo/data-store": "^3.1.0",
    "@veramo/did-manager": "^3.1.0",
    "@veramo/did-provider-ethr": "^3.1.0",
    "@veramo/did-resolver": "^3.1.0",
    "@veramo/key-manager": "^3.1.0",
    "@veramo/kms-local": "^3.1.0",
    "did-jwt-vc": "^2.1.9",
    "did-resolver": "^3.2.0",
    "ethers": "^5.6.5",
    "ethr-did": "^2.2.2",
    "ethr-did-resolver": "^5.0.4",
    "js-base64": "^3.7.2",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "uuid": "^8.3.2",
    "web-did-resolver": "^2.0.14"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
